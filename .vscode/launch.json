  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Debug Client (Run Server)",
      "request": "launch",
      "type": "cppvsdbg",
      "windows": {
        "program": "${workspaceFolder}/BUILD/VS2019/Debug/CoronaRoyale.exe",
        "cwd": "${workspaceFolder}/BUILD/VS2019/Debug/",
        "postDebugTask": "Shutdown Server"
      },
      "args": [],
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": true,
      "preLaunchTask": "Run Server"
    },
    {
      "name": "(Windows) Client",
      "request": "launch",
      "type": "cppvsdbg",
      "windows": {
        "program": "${workspaceFolder}/BUILD/VS2019/Debug/CoronaRoyale.exe",
        "cwd": "${workspaceFolder}/BUILD/VS2019/Debug/",
      },
      "args": [],
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": true,
      "preLaunchTask": "Build"
    },
    {
      "name": "(Windows) Server",
      "request": "launch",
      "type": "cppvsdbg",
      "windows": {
        "program": "${workspaceFolder}/BUILD/VS2019/Debug/CoronaRoyaleServer.exe",
        "cwd": "${workspaceFolder}/BUILD/VS2019/Debug/",
      },
      "args": [],
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": true,
      "preLaunchTask": "Build"
    },
    {
      "name": "(macOS) Run Client",
      "request": "launch",
      "type": "cppdbg",
      "osx": {
        "miDebuggerPath": "/Applications/Xcode.app/Contents/Developer/usr/bin/lldb-mi",
